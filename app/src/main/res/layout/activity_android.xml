<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_android"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="stardust.com.reviewapp.android">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Review "
        android:background="#D32F2F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reviewButton"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/exploreButton"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:onClick="reviewClicked" />

    <Button
        android:text="Explore"
        android:background="#D32F2F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exploreButton"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/reviewButton"
        android:layout_alignStart="@+id/reviewButton"
        android:onClick="exploreClicked" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/divider"
        android:id="@+id/imageView2"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/reviewButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="My Reviews"
        android:background="#D32F2F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myReviewsButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/reviewButton"
        android:layout_alignStart="@+id/reviewButton"
        android:layout_marginBottom="31dp"
        android:onClick="myReviewsClicked" />

</RelativeLayout>
